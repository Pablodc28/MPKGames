<%- include("./partials/head") %> 


    <!--HEADER: CABECERA Y MENÚ DE NAVEGACIÓN-->

    <%- include("./partials/header") %> 
    
        <!--SECCIÓN: img y descripcionCorta sobre el articulo-->

<div class="container"> 
    <section >
        <div class="row">
            <nav class="navDetalleProd col-12 col-md-12 col-lg-12" aria-label="breadcrumb">
                <ol class="orderListDetall breadcrumb">
                    <li class="liBreadcrumb breadcrumb-item"><a href="/">Home</a></li>
                    <li class="liBreadcrumb breadcrumb-item active" aria-current="page">Detalle del Juego</li>
                </ol>
            </nav>
        

            <article class="articuloDetalle">
                    <!--Carrusel de Fotos del Juego-->
                    <div class="contImgArtDetalle col-12 img-fluid">
                        <img class="imgArtDetalle rounded " src="images/horizon-zero-dawn-complete-edition-cover.jpg" alt="">
                    </div>

                    <div id="carouselExampleIndicators" class="carro carousel slide col-md-6 col-lg-7" data-ride="carousel">
                        <ol class="carousel-indicators">
                          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <!-- <img src= "images/horizon01.jpg" class="rounded d-block w-100" alt="..."> -->                            
                            <img src="/images/products/<%- producto.Imagen %>  " class="rounded d-block w-100" alt="...">
                          </div>
                          <!-- <div class="carousel-item">
                            <img src="images/horizon02.jpg" class="rounded d-block w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="images/horizon03.jpg" class="rounded d-block w-100" alt="...">
                          </div> -->
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                    </div>




                <!--detalle de la compra-->

                 
                    <div class="contenedorDesc col-12 col-md-6 col-lg-5">
                
                <form action="/carritos/agregarAlCarrito/<%= producto.IdJuego %>" method="POST">                                                   
                        <h4 class="nomDelJuego "> <%- producto.NombreDeProducto %></h4>
                        <h3> <%- producto.Codigo %> </h3>                        
                        
                        <input name="IdJuego" style="display: none" value="<%- producto.IdJuego %>">
                        <input name="codigo" style="display: none" value="<%- producto.Codigo %>">
                        <input name="NombreDeproducto" style="display: none" value="<%- producto.NombreDeProducto %>">
                        <input name="precioDescuento" style="display: none" value="<%- (producto.Precio -producto.Precio * producto.Descuento /100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>">

                        <ul class="unorderList alert ">
                            <li id="descuento" class="listDetalle">Descuento: <%- producto.Descuento %><span class="cantDescuento">%</span></li>
                            <li class="listDetalle"><p class="mensajDetalle">¡Compralo Ya!</p></li>
                            <li id="precioProd" class="listDetalle">Precio: $ <s><%- producto.Precio %></s></li>
                            <li id="precioDesc" class="listDetalle">Precio con descuento: $  <%- (producto.Precio -producto.Precio * producto.Descuento /100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></li>
                            <li id="stock" class="listDetalle">Stock: <%- producto.Stock %> </li>                
                        </ul>
                    
                        <!--agregando el botond de comprar-->     
                            <button class="botonDeComprar btn btn-primary btn-lg btn-block" type="submit" name="id" value="<%= producto.IdJuego %> ">Agregar al Carrito de Compras                               
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart4" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                                </svg>
                            </button>                          
                        <!--Mas detalle extenso del producto-->
                                </div>
                            <div class="contBtnCollapse col-12 col-md-12 col-lg-12">

                                <button class="btnDetalle btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                    Mas Detalles
                                </button>
                            
                                <div class="collapseDetalle collapse" id="collapseExample">
                                    <div class="cardDetalle card card-body" style= "width: 100%;">
                
                                        <ul class="listGrupDetalle list-group list-group-flush">
                                            <li id="tamanioJue" class="liDetalle list-group-item">Tamaño: <%- producto.Tamanio %> </li>
                                            <li id="idiomaJuego" class="liDetalle list-group-item">Idioma: <%- producto.Idioma %> </li>
                                            <li id="subtitulo" class="liDetalle list-group-item">Subtitulos: <%- producto.IdiomaSubt %> </li>
                                            <li id="fechaLanzam" class="liDetalle list-group-item">Fecha de lanzamiento: <%- producto.FechaLanzamiento %>  </li>
                                            <li id="categoriaJuego" class="liDetalle list-group-item">Categoria:<%- producto.Categoria %> </li>
                                            <li id="DescripcionCorta" class="liDetalle list-group-item">Descripcion breve: <%- producto.DescripcionCorta %> </li>
                                        </ul>
                                                            
                                        </div>
                                    </div>
                            </div>  
                    </form>            
        </article>
    </div>
    </section> 
 
 
</div>  

        <!--finaliza div.row-->
         <!--caja con el contenido principal de footer-->
