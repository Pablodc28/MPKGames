<%- include("./partials/head") %> 

<%- include("./partials/header") %> 
     


    <!--caja contenedora de boostrap-->
    <section class="container">

     <!--caja que contiene el icono del carrito y los pasos de compra-->
        <div class="row">

        <article class="col-12 col-md-12 col-lg-4 ">
            <div class="col-12 col-lg-12 miCompra">
              <h1 class="h1MiCompra"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart4 iconoCarrito" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
              </svg><p>Mi Compra</p></h1>
            </div>
            
             <!--caja que contiene los pasos de compra y los botones con sus logos-->
            <div class="list-group col-0 col-md-12 col-lg-10 listaDePasos">

                <button type="button" class="list-group-item list-group-item-action active"><svg width="20px" height="20px" viewBox="0 0 16 16" class="bi bi-grid-fill cuadricula" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3z"/>
                  </svg> Mis productos</button>

                <button type="button" class="list-group-item list-group-item-action"><svg width="20px" height="20px" viewBox="0 0 16 16" class="bi bi-truck camion" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5v7h-1v-7a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .5.5v1A1.5 1.5 0 0 1 0 10.5v-7zM4.5 11h6v1h-6v-1z"/>
                    <path fill-rule="evenodd" d="M11 5h2.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5h-1v-1h1a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12v4.5h-1V5zm-8 8a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 1a2 2 0 1 0 0-4 2 2 0 0 0 0 4z"/>
                    <path fill-rule="evenodd" d="M12 13a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm0 1a2 2 0 1 0 0-4 2 2 0 0 0 0 4z"/>
                  </svg> Mi entrega</button>

                <button type="button" class="list-group-item list-group-item-action"><svg width="20px" height="20px" viewBox="0 0 16 16" class="bi bi-credit-card tarjeta" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1H2zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V7z"/>
                    <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1z"/>
                  </svg> Mi forma de pago</button>

                <button type="button" class="list-group-item list-group-item-action"><svg width="20px" height="20px" viewBox="0 0 16 16" class="bi bi-check2-square verificado" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L8 9.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
                    <path fill-rule="evenodd" d="M1.5 13A1.5 1.5 0 0 0 3 14.5h10a1.5 1.5 0 0 0 1.5-1.5V8a.5.5 0 0 0-1 0v5a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V3a.5.5 0 0 1 .5-.5h8a.5.5 0 0 0 0-1H3A1.5 1.5 0 0 0 1.5 3v10z"/>
                  </svg> Mi compra</button>
              </div>
        </article>
            

       

            <!--caja que contiene el icono de Mis productos-->
            <article class="col-12 col-md-12 col-lg-8 ">

                <div class="col-12 col-lg-6 misProductos">
                    <h2><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-grid-fill iconoCuadricula" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3z"/>
                    </svg><p> Mis productos</p></h2>
                </div>           
 
                  <!--caja que contiene el detalle de compra-->
                  <div class=" detalleDeCompra">
                    <div class="col-12 caracteristica">                      
                        <div class="col-4 col-md-6">
                            <p>Producto</p>
                        </div>
                        <div class="col-3 col-md-3">
                            <p>Cantidad</p>
                        </div>
                        <div class="col-5 col-md-3">
                            <p class="precio">Precio $:</p>
                        </div>
                    </div>
                  </div>

                      <!--caja que contiene el especificacion y contenido de la compra-->
                      <% productoEnCarrito.forEach(producto => { %> 
                  <div class=" row align-items-center contenidoDeCompra">
                    <p style="display: none" > <%- producto.idcarrito %>                                                                                 
                         <div class="col-md-2 imagen">
                          <% if (producto.Producto.Imagen) { %>
                            <img style="width: 60px;" src="/images/products/<%- producto.Producto.Imagen %>  " alt=" "> 
                         <% } else { %>                             
                            <img style="width: 60px;" src="/images/products/default.png " alt=" "> 
                         <% } %>  
                            
                        </div>   
                        <div class="col-4 col-md-4">                    
                            <p> <%- producto.Producto.NombreDeProducto %>
                          </p>

                        </div>
                        <div class="col-3 col-md-3">
                            <p class="cantidad"><%- producto.cantidad %></p>
                        </div>
                        <div class="col-3 col-md-2">
                            <p class="precioNumero"> <%- producto.precio %></p>
                        </div>
                              <div class=" col-2 col-md-1">
                                <form action="/carritos/eliminarDelCarrito/<%= producto.idcarrito %>?_method=DELETE" method="POST" >                                                                                         
                                      <button type="submit" class="btn btn-danger eliminar" ><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                        </svg>
                                    </button>   
                                </form>
                              </div>
                  </div>
                  <% }) %>
              </article>
            
                
         
        <!--caja que contiene el precio total-->
         <article class="col-12">
            <div class=" precioTotal">
                <h4>$ <%= TotalImporteCarrito %> </h4>
            </div>
        
        
        <!--caja que contiene el boton de siguiente-->
             <div class=" botonSiguiente">
              <div class="col-12">
                <a href="/carritos/miEntrega"><button type="button" class="btn btn-primary siguiente"> Siguente</button></a>
             </div>
            </div>
        </article>
     </div>
        </section>
        





         <!--caja con el contenido principal de footer-->
         <!--FOOTER: PIE DE PAGINA-->
<%- include("./partials/footer") %> 