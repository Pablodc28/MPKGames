                                     <%- (producto.Precio -producto.Precio * producto.Descuento /100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>
                                </h2>
                                <input name="precioDescuento" style="display: none" value="<%- (producto.Precio -producto.Precio * producto.Descuento /100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>">

                                <!--descuento-->
                                <% if (producto.Descuento !=0) { %>
                                    <span><%- producto.Descuento %> % OFF</span>
                                <% } %>     
                                                      
                               <p> <%- producto.NombreDeProducto %></p>
                               <input name="NombreDeproducto" style="display: none" value="<%- producto.NombreDeProducto %>">

                               <!--icono de Consolas-->
                                   <i class="fab fa-xbox Xbox"></i>
                                   <i class="fab fa-playstation playStation"></i>                              
                                   
                                    <button type="submit" class="btn btn-primary btn-lg btnAgregarCarrito">Agregar al Carrito</button>                                                                        
                        </form>
                            </article> 
                        <!--finaliza contenido-->
                    </div>
                    <!--finaliza caja de grilla de boostrap-->
                </div>
                <!--finaliza el div.row-->
                <% }) %>
            </div>

            <!--FINALIZA SECCIÓN ULTIMOS JUEGOS OFERTAS-->
        </section>
    </div>




    <section class="container-fluid">
        <!--caja con el contenido principal de footer-->
        <div class="row">
